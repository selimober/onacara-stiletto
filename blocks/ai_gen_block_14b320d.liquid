{% doc %}
  @prompt
    I want a testimonial section, with testimonial cards as children where there will be a left aligned rounded portrait, on the right their name and job title, at the bottom their testimonial, make four of these, stackable on mobile
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.section_background }};
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-testimonials-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
  }

  .ai-testimonials-highlight-{{ ai_gen_id }} {
    display:inline;
    padding: 0 .12em;                        /* lets the highlight peek past the text edges */
    background-image: linear-gradient(transparent 58%,rgba(249, 213, 31, 0.69) 0); /* adjust 58% for thickness */
    -webkit-box-decoration-break: clone;     /* makes the highlight continue on wrapped lines */
    box-decoration-break: clone;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-testimonial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-testimonial-card__header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .ai-testimonial-card__image-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-testimonial-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-card__image-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-card__info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-testimonial-card__name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.name_color }};
    margin: 0 0 4px;
  }

  .ai-testimonial-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
  }

  .ai-testimonial-card__testimonial-{{ ai_gen_id }} {
    font-size: {{ block.settings.testimonial_size }}px;
    line-height: 1.6;
    color: {{ block.settings.testimonial_color }};
  }

  .ai-testimonial-card__testimonial-{{ ai_gen_id }} p {
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-testimonials-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.75 }}px 16px;
    }

    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }

    .ai-testimonial-card__image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }

    .ai-testimonials-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-testimonials-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-testimonials-heading-{{ ai_gen_id }}">
        <span class="ai-testimonials-highlight-{{ ai_gen_id }}">{{ block.settings.heading }}</span>
      </h2>
    {% endif %}

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign name_key = 'name_' | append: i
          assign job_title_key = 'job_title_' | append: i
          assign testimonial_key = 'testimonial_' | append: i

          assign image = block.settings[image_key]
          assign name = block.settings[name_key]
          assign job_title = block.settings[job_title_key]
          assign testimonial = block.settings[testimonial_key]
        %}

        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          <div class="ai-testimonial-card__header-{{ ai_gen_id }}">
            <div class="ai-testimonial-card__image-wrapper-{{ ai_gen_id }}">
              {% if image %}
                <img
                  src="{{ image | image_url: width: 200 }}"
                  alt="{{ name | escape }}"
                  class="ai-testimonial-card__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>
            <div class="ai-testimonial-card__info-{{ ai_gen_id }}">
              {% if name != blank %}
                <h3 class="ai-testimonial-card__name-{{ ai_gen_id }}">{{ name }}</h3>
              {% endif %}
              {% if job_title != blank %}
                <p class="ai-testimonial-card__title-{{ ai_gen_id }}">{{ job_title }}</p>
              {% endif %}
            </div>
          </div>
          {% if testimonial != blank %}
            <div class="ai-testimonial-card__testimonial-{{ ai_gen_id }}">
              {{ testimonial }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

